<script>
    function deleteProductCart(Product){
        var id = Product.getAttribute('id')
        var idCustomer = getCookie('user_token')
        Product.parentElement.remove()
        $('.header-cart-total').remove()
        $.ajax({
            url: `/cart`,
            type: 'DELETE',
            data: {
                idProduct: id,
                idCustomer: idCustomer,
            }
        })
        
    }
</script>


